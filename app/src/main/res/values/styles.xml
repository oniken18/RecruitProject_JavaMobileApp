<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BeigeLight</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/AppMain</item>
        <item name="android:itemBackground">@color/BeigeLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleTextColor">@color/BeigeLight</item>
        <item name="android:itemBackground">@color/BeigeLight</item>
    </style>

    <style name="AppTheme.PopupEducation">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


</resources>
